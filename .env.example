# ===========================================
# WheelsAI Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ---- General ----
NODE_ENV=development
LOG_LEVEL=debug

# ---- Database (PostgreSQL) ----
DATABASE_URL="postgresql://wheelsai:wheelsai@localhost:5432/wheelsai?schema=public"

# ---- Redis ----
REDIS_URL="redis://localhost:6379"

# ---- Web App (Next.js) ----
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:4000"

# ---- API Server ----
API_PORT=4000
API_HOST="0.0.0.0"

# ---- Auth ----
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"
SESSION_SECRET="your-session-secret-change-in-production"

# ---- Solana / Nosana ----
SOLANA_RPC_URL="https://api.devnet.solana.com"
SOLANA_NETWORK="devnet"
NOSANA_MARKET_ADDRESS=""
NOSANA_WALLET_PRIVATE_KEY=""

# ---- Stripe (Payments) ----
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# ---- IPFS ----
PINATA_API_KEY=""
PINATA_SECRET_KEY=""
IPFS_GATEWAY_URL="https://gateway.pinata.cloud/ipfs"

# ---- Inference Proxy ----
INFERENCE_PROXY_PORT=4001
INFERENCE_TIMEOUT_MS=30000
MAX_RETRIES=2

# ---- Agent Wallet Encryption ----
MASTER_ENCRYPTION_KEY=""

# ---- Email (Optional) ----
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@wheelsai.io"

# ---- Observability ----
SENTRY_DSN=""
